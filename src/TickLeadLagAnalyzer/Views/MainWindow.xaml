<Window x:Class="TickLeadLagAnalyzer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:vm="clr-namespace:TickLeadLagAnalyzer.ViewModels"
        mc:Ignorable="d"
        Title="Tick Lead-Lag Analyzer" 
        Height="700" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Connection Section -->
            <GroupBox Grid.Row="0" Header="Connection" Margin="0,0,10,10">
                <StackPanel Margin="5">
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Server:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding Server, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Login:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Password:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Connect" 
                                Command="{Binding ConnectCommand}"
                                Style="{StaticResource PrimaryButton}"
                                IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}"
                                Margin="0,0,10,0"/>
                        <Button Content="Disconnect" 
                                Command="{Binding DisconnectCommand}"
                                IsEnabled="{Binding IsConnected}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            
            <!-- Symbols Section -->
            <GroupBox Grid.Row="1" Header="Symbols" Margin="0,0,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ListBox Grid.Row="0" 
                             ItemsSource="{Binding Symbols}"
                             SelectedItem="{Binding SelectedSymbol}"
                             Margin="0,0,0,5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="âœ“" 
                                               Foreground="#4EC9B0"
                                               Visibility="{Binding IsBase, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Symbol}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Grid Grid.Row="1" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                 Text="{Binding NewSymbol, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,5,0"/>
                        <Button Grid.Column="1" 
                                Content="Add" 
                                Command="{Binding AddSymbolCommand}"
                                Padding="10,5"/>
                    </Grid>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <Button Content="Remove Symbol" 
                                Command="{Binding RemoveSymbolCommand}"
                                Margin="0,0,5,0"/>
                        <Button Content="Set as Base" 
                                Command="{Binding SetAsBaseCommand}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
            
            <!-- Status Section -->
            <GroupBox Grid.Row="2" Header="Status" Margin="0,0,10,0">
                <StackPanel Margin="5">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                        <TextBlock Text="Status: "/>
                        <TextBlock Text="{Binding ConnectionStatusText}" 
                                   Foreground="{Binding IsConnected, Converter={StaticResource StatusColorConverter}}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Last Tick: "/>
                        <TextBlock Text="{Binding LastTickTime}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <!-- Right Panel -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            
            <!-- Chart -->
            <GroupBox Grid.Row="0" Header="Gap-to-Base Chart" Margin="0,0,0,10">
                <lvc:CartesianChart 
                    Series="{Binding ChartSeries}"
                    XAxes="{Binding XAxes}"
                    YAxes="{Binding YAxes}"
                    ZoomMode="X"
                    TooltipPosition="Left"
                    Background="#1E1E1E"/>
            </GroupBox>
            
            <!-- Lag Correlation Table -->
            <GroupBox Grid.Row="1" Header="Lag Correlation Analysis">
                <DataGrid ItemsSource="{Binding CorrelationResults}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="" Width="30">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IsLeading, Converter={StaticResource LeadLagIconConverter}}"
                                               Foreground="{Binding IsLeading, Converter={StaticResource LeadLagColorConverter}}"
                                               HorizontalAlignment="Center"
                                               FontSize="14"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="100"/>
                        <DataGridTextColumn Header="Best Lag" Binding="{Binding LagDisplay}" Width="100"/>
                        <DataGridTextColumn Header="Correlation" Binding="{Binding CorrelationDisplay}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
